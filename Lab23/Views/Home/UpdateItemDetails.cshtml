
@{
    ViewBag.Title = "UpdateItemDetails";
}
@model Lab23.Models.Item
<h2>Show Item Details</h2>

<form action="/Home/SaveItemUpdates" method="post">
    Name: <input type="text" name="Name" value="@Model.Name" /><br />
    Description: <input type="text" name="Description" value="@Model.Description" /><br />
    Quantity: <input type="text" name="Quantity" value="@Model.Quantity" /><br />
    Price: <input type="text" name="Price" value="@Model.Price" /><br />
    <input type="submit" name="Save Updates" />
</form>


